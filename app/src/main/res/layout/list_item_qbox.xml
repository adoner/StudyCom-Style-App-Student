<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinLay"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#95DDDBDB"
    android:orientation="vertical"
    android:paddingTop="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_pricing"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#6DA3A2A2">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/questionimage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="8dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/message"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="40dp"
            android:text="TextView" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="145dp"
            android:layout_marginTop="70dp"
            app:srcCompat="@drawable/questionmark" />

        <TextView
            android:id="@+id/tw4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="65dp"
            android:paddingTop="5dp"
            android:text="tarihinde soruldu."
            android:textSize="10sp" />

        <TextView
            android:id="@+id/asking_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="175dp"
            android:layout_marginTop="65dp"
            android:paddingTop="5dp"
            android:text="TextView"
            android:textSize="10sp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/qbox_durum_image"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="145dp"
            android:layout_marginTop="105dp" />

        <TextView
            android:id="@+id/tvSolved"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="100dp"
            android:paddingTop="5sp"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/viewed"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="175dp"
            android:layout_marginTop="100dp"
            android:paddingTop="5sp"
            android:text="TextView"
            android:textSize="10sp" />

    </androidx.cardview.widget.CardView>

</LinearLayout>